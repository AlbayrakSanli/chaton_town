<h1>Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Cart</th>
      <th>Item</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @joins.each do |line_item| %>
      <tr>
        <td><%= join_cart_item.cart %></td>
        <td><%= join_cart_item.item %></td>
        <td><%= join_cart_item.quantity %></td>
        <td><%= link_to 'Show', join_cart_item %></td>
        <td><%= link_to 'Edit', edit_join_cart_item_path(join_cart_item) %></td>
        <td><%= link_to 'Destroy', join_cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

