<p id="notice"><%= notice %></p>

<h2>Panier</h2>

<ul>

  <% @cart.join_cart_items.each do |itemL| %>
    <li class="mb-3">
      <%= itemL.item.title %> (Quantité = 1) <%= itemL.item.price %>€ <%= link_to "Show", item_path(itemL.item), method: "GET",class: "btn-sm btn-danger"%> <%= link_to "Supprimer", cart_path(itemL.item), method: "DELETE",class: "btn-sm btn-danger"%>
    </li>
  <% end %>

</ul>

<p>Somme totale : <%= @summ %></p>

<% unless @cart.join_cart_items == [] %>
  <%= link_to "Commander", orders_path(current_user), method: "post", class: "btn-sm btn-danger"%>
<% end %>


<p>
  <%= link_to "Retour aux produits", root_path %>
</p>
